<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./styles.css" />
    <title><%=title%></title>
  </head>
  <body>
    <h1>Messages</h1>
    <section class="messages">
      <ul>
        <% messages.forEach(message =>{ %>
        <li class="message">
          <div>Author: <strong><%=message.user%></strong></div>
          <div class="text"><%= message.text%></div>
          <div class="added"><%= message.added%></div>
        </li>
        <%})%>
      </ul>
    </section>
    <section class="new-message">
      <button type="button"><a href="/new">New Message </a></button>
    </section>
    <%- include('footer', {user:'Mohamed El Merjani',
    userGithub:'https://github.com/elmerjani'})%>
  </body>
</html>
